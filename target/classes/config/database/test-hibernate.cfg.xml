<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration
        PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- The dialect to be used for the hibernate and config.database interactions -->
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>

        <!-- You will usually want to set this to true while debugging hibernate queries -->
        <property name="hibernate.show_sql">true</property>

        <!-- Map the app related object entity classes here -->
        <mapping class="webProject.model.entity.User" />
        <mapping class="webProject.model.entity.Esercizio" />
        <mapping class="webProject.model.entity.Massimale" />
        <mapping class="webProject.model.entity.Misurazione" />
        <mapping class="webProject.model.entity.Parti_misurazione" />
        <mapping class="webProject.model.entity.Scheda" />
        <mapping class="webProject.model.entity.Giornata_scheda" />
        <mapping class="webProject.model.entity.Esercizio_giornata" />
        <mapping class="webProject.model.entity.SalvaScheda" />
        <mapping class="webProject.model.entity.Storico_esercizio" />
        <mapping class="webProject.model.entity.Giornata_scheda" />
        <mapping class="webProject.model.entity.Storico_allenamento" />
        <mapping class="webProject.model.entity.Votazione" />



    </session-factory>
</hibernate-configuration>